{% extends 'base.html.twig' %}

{% block body %}
    <h1>Illustrations list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Détails</th>
                <th>Dimensions</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for illustration in illustrations %}
            <tr>
                <td><a href="{{ path('illustration_show', { 'id': illustration.id }) }}">{{ illustration.id }}</a></td>
                <td>{{ illustration.nom }}</td>
                <td>{{ illustration.détails }}</td>
                <td>{{ illustration.dimensions }}</td>
                <td>{% if illustration.date %}{{ illustration.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('illustration_show', { 'id': illustration.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('illustration_edit', { 'id': illustration.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('illustration_new') }}">Create a new illustration</a>
        </li>
    </ul>
{% endblock %}
