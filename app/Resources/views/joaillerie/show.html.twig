{% extends 'base.html.twig' %}

{% block body %}
    <h1>Joaillerie</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ joaillerie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ joaillerie.nom }}</td>
            </tr>
            <tr>
                <th>Détails</th>
                <td>{{ joaillerie.détails }}</td>
            </tr>
            <tr>
                <th>Dimensions</th>
                <td>{{ joaillerie.dimensions }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if joaillerie.date %}{{ joaillerie.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('joaillerie_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('joaillerie_edit', { 'id': joaillerie.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
