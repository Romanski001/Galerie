{% extends 'base.html.twig' %}

{% block body %}
    <h1>Collages list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Détails</th>
                <th>Dimensions</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for collage in collages %}
            <tr>
                <td><a href="{{ path('collage_show', { 'id': collage.id }) }}">{{ collage.id }}</a></td>
                <td>{{ collage.nom }}</td>
                <td>{{ collage.détails }}</td>
                <td>{{ collage.dimensions }}</td>
                <td>{% if collage.date %}{{ collage.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('collage_show', { 'id': collage.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('collage_edit', { 'id': collage.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('collage_new') }}">Create a new collage</a>
        </li>
    </ul>
{% endblock %}
